<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <property name="LOG_PATH" value="${logging.file.path:-logs}" />
    <property name="APP_DIR" value="${LOG_PATH}/application" />
    <property name="SCHEDULER_DIR" value="${LOG_PATH}/scheduler" />
    <property name="APP_LOG" value="${logging.file.name:-${APP_DIR}/application.log}" />
    <property name="SCHEDULER_LOG" value="${logging.file.scheduler:-${SCHEDULER_DIR}/scheduler.log}" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${APP_LOG}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${APP_DIR}/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${logging.file.max-size:-5MB}</maxFileSize>
            <maxHistory>${logging.file.max-history:-5}</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="SCHEDULER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${SCHEDULER_LOG}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${SCHEDULER_DIR}/scheduler.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${logging.file.max-size:-5MB}</maxFileSize>
            <maxHistory>${logging.file.max-history:-10}</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.shadcn.backend.scheduler" level="INFO" additivity="false">
        <appender-ref ref="SCHEDULER_FILE" />
        <appender-ref ref="APP_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="com.shadcn.backend.service.LearningSchedulerExecutionService" level="INFO" additivity="false">
        <appender-ref ref="SCHEDULER_FILE" />
        <appender-ref ref="APP_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="com.shadcn.backend.service.LearningScheduleAsyncService" level="INFO" additivity="false">
        <appender-ref ref="SCHEDULER_FILE" />
        <appender-ref ref="APP_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="APP_FILE" />
    </root>

</configuration>
